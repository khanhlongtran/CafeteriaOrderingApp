<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/white_bg">

    <ImageView
        android:id="@+id/hotdogImg"
        android:layout_width="100dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/hotdogTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Classic Beef Hot Dog"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/hotdogAddButton"
        app:layout_constraintStart_toEndOf="@+id/hotdogImg"
        app:layout_constraintTop_toTopOf="@+id/hotdogImg" />

    <TextView
        android:id="@+id/hotdogDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Classic Beef Hot Dog"
        android:textColor="@color/dark_blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/hotdogAddButton"
        app:layout_constraintStart_toEndOf="@+id/hotdogImg"
        app:layout_constraintTop_toBottomOf="@+id/hotdogTitle" />

    <TextView
        android:id="@+id/hotdogPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="$5.99"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/hotdogImg"
        app:layout_constraintTop_toBottomOf="@+id/hotdogDescription" />

    <TextView
        android:id="@+id/hotdogStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Status: Pending"
        android:textColor="@color/dark_blue"
        app:layout_constraintStart_toEndOf="@+id/hotdogImg"
        app:layout_constraintTop_toBottomOf="@+id/hotdogPrice" />

    <TextView
        android:id="@+id/hotdogTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Time: 10:00 AM"
        android:textColor="@color/dark_blue"
        app:layout_constraintStart_toEndOf="@+id/hotdogImg"
        app:layout_constraintTop_toBottomOf="@+id/hotdogStatus" />

    <TextView
        android:id="@+id/hotdogRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="4.2"
        android:textColor="@color/dark_blue"
        app:layout_constraintStart_toEndOf="@+id/hotdogImg"
        app:layout_constraintTop_toBottomOf="@+id/hotdogTime" />

    <ImageView
        android:id="@+id/hotdogRatingStar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/hotdogRating"
        app:layout_constraintStart_toEndOf="@+id/hotdogRating"
        app:layout_constraintTop_toTopOf="@+id/hotdogRating"
        app:srcCompat="@drawable/star" />

    <TextView
        android:id="@+id/hotdogDeliveryTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="9 min"
        android:textColor="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="@+id/hotdogRatingStar"
        app:layout_constraintStart_toEndOf="@+id/hotdogRatingStar"
        app:layout_constraintTop_toTopOf="@+id/hotdogRatingStar" />

    <ImageView
        android:id="@+id/hotdogDeliveryTimeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/hotdogDeliveryTime"
        app:layout_constraintStart_toEndOf="@+id/hotdogDeliveryTime"
        app:layout_constraintTop_toTopOf="@+id/hotdogDeliveryTime"
        app:srcCompat="@drawable/time" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hotdogAddButton"
        android:layout_width="44dp"
        android:layout_height="40dp"
        android:background="@drawable/red_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/hotdogAddText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>